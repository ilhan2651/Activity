@using App.Dto.Role
@model List<RoleAssignDto>

@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/ModeratorLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Rol Atama</h4>
        </div>
        <div class="card-body">
            <h5 class="mb-3 text-secondary">Kullanıcıya atanabilecek roller:</h5>

            <form action="/Moderator/ModeratorRole/AssignRole" method="post">

     
                <input type="hidden" name="userId" value="@ViewBag.UserId" />

                <div class="row">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="form-check p-3 border rounded shadow-sm bg-light">

                                <input type="hidden" name="model[@i].RoleId" value="@Model[i].RoleId" />
                                <input type="hidden" name="model[@i].Name" value="@Model[i].Name" />

                                <input type="checkbox"
                                       class="form-check-input"
                                       id="role_@i"
                                       name="model[@i].Exists"
                                       value="true"
                                @(Model[i].Exists ? "checked" : "") />
                                <label class="form-check-label fw-bold" for="role_@i">@Model[i].Name</label>

                            </div>
                        </div>
                    }
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4 py-2 shadow">
                        Değişiklikleri Kaydet
                    </button>
                </div>
            </form>

            <div class="mt-3 text-center">
                <a href="/Moderator/ModeratorRole/UserRoleList/" class="btn btn-primary">
                    Kullanıcı Listesine Dön
                </a>
            </div>
        </div>
    </div>
</div>
