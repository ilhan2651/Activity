
@{
    ViewData["Title"] = "Gallery";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

@model List<string>

<main class="main">
    <section class="py-3 text-center border-bottom">
        <div class="container">
            <h3 class="fw-semibold text-dark mb-1">📷 Galeri</h3>
            <p class="text-muted small">Etkinliklerden paylaşılan görseller burada yer alır.</p>
        </div>
    </section>
    <section id="portfolio" class="portfolio section">
        <div class="container">
            <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">
               

                <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                    @foreach (var imgPath in Model)
                    {
                        <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-app">
                            <img src="@imgPath" class="img-fluid" alt="Yorum görseli">
                            <div class="portfolio-info">
                                <h4>Yorum Görseli</h4>
                                <p>Kullanıcı yorumu görseli</p>
                                <a href="@imgPath" title="Görseli Büyüt" data-gallery="portfolio-gallery" class="glightbox preview-link">
                                    <i class="bi bi-zoom-in"></i>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</main>


